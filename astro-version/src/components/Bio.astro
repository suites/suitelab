---
import { AUTHOR_NAME, SITE_DESCRIPTION, SOCIAL_LINKS, RESUME_URL } from '@/consts';
---

<div class="bio-wrapper">
  <div class="bio-header">
    <img 
      src="/images/avatar.png" 
      alt={AUTHOR_NAME}
      class="avatar-image"
    />
    <div class="bio-name">{AUTHOR_NAME}</div>
  </div>
  <div class="bio-main">
    <div class="bio-text">
      {SITE_DESCRIPTION.split('\n').map((line: string) => (
        <p>{line}</p>
      ))}
    </div>
    <div class="bio-links">
      <a href={RESUME_URL} class="bio-link">
