---
import { formatDate } from '@/utils/date';

interface Props {
	date: Date | string;
	format?: string;
}

const { date, format = 'YYYY.MM.DD' } = Astro.props;
const dateObj = typeof date === 'string' ? new Date(date) : date;
const formattedDate = formatDate(date, format);
---

<time datetime={dateObj.toISOString()}>
	{formattedDate}
</time>
