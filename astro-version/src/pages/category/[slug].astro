---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Bio from '@/components/Bio.astro';
import CategoryMenu from '@/components/CategoryMenu.astro';
import PostCard from '@/components/PostCard.astro';
import { getCategoryBySlug, getAllCategorySlugs } from '@/utils/category';
import { sortByDate } from '@/utils/date';
import { SITE_DESCRIPTION } from '@/consts';

export async function getStaticPaths() {
  const categorySlugs = getAllCategorySlugs();
  const posts = await getCollection('blog');
  
  return categorySlugs.map((slug) => {
    // 해당 카테고리의 포스트만 필터링
    const categoryPosts = posts.filter((post) => {
      return (post.data as any).category === slug;
    });
    
    return {
      params: { slug },
      props: { 
        posts: categoryPosts,
        categorySlug: slug 
      },
    };
  });
}

interface Props {
  posts: any[];
  categorySlug: string;
}

const { posts, categorySlug } = Astro.props;
const categoryInfo = getCategoryBySlug(categorySlug);
const categoryName = categoryInfo?.name || categorySlug;

// 날짜순 정렬
const sortedPosts = sortByDate(posts);

// 페이지 타이틀과 설명
const pageTitle = `${categoryName} 카테고리`;
const pageDescription = `${categoryName} 관련 포스트들을 확인해보세요.`;
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  
  <div class="content-wrapper">
    <div class="layout-content">
      <main class="main-wrapper">
        <CategoryMenu />
        
        <!-- 카테고리 헤더 -->
        <div class="category-header">
          <h1 class="category-title">
            {categoryInfo && (
              <span class="category-icon" set:text={categoryInfo.icon} />
            )}
            {categoryName}
          </h1>
          <p class="category-description">
            총 {sortedPosts.length}개의 포스트
          </p>
        </div>
        
        <!-- 포스트 목록 -->
        {sortedPosts.length > 0 ? (
          sortedPosts.map((post) => (
            <PostCard post={post} />
          ))
        ) : (
          <p class="no-posts">아직 포스트가 없습니다.</p>
        )}
      </main>
      
      <Bio />
    </div>
  </div>
  
  <Footer />
</Layout>

<style>
  /* ContentWrapper 스타일 (원본 Gatsby 기준) */
  .content-wrapper {
    max-width: 1100px; /* theme.sizes.maxWidth */
    margin: 0 auto;
    padding: 0 1.5em; /* theme.sideSpace.large */
  }
  
  /* Layout Content 스타일 (원본 Gatsby 기준) */
  .layout-content {
    margin-top: 2em;
    display: flex;
    min-height: 85vh;
    align-items: flex-start;
  }
  
  /* Main Wrapper 스타일 (원본 Gatsby 기준) */
  .main-wrapper {
    width: calc(100% - 290px - 40px); /* bioWidth(290px) + 여백(40px) */
    margin-right: 40px;
  }
  
  .category-header {
    margin: 2rem 0;
    padding-bottom: 2rem;
    border-bottom: 1px solid #313746; /* theme.colors.blackLight - PostCard와 동일한 색상 사용 */
  }
  
  .category-title {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 0 0 1rem 0;
    font-size: 2.5rem;
    font-weight: 800;
    color: white;
    letter-spacing: -0.5px;
  }
  
  .category-icon {
    font-size: 3rem;
    line-height: 1;
  }
  
  .category-description {
    margin: 0;
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .posts-list {
    margin-top: 2rem;
  }
  
  .no-posts {
    padding: 4rem 0;
    text-align: center;
    color: rgba(255, 255, 255, 0.5);
    font-size: 1.1rem;
  }
  
  @media screen and (max-width: 950px) { /* theme.responsive.large */
    .content-wrapper {
      max-width: 760px;
    }
    
    .layout-content {
      display: block;
    }
    
    .main-wrapper {
      width: 100%;
      margin-right: 0;
    }
  }
  
  @media screen and (max-width: 500px) { /* theme.responsive.small */
    .content-wrapper {
      padding: 0 20px; /* theme.sideSpace.small */
    }
  }
  
  @media (max-width: 768px) {
    .content-wrapper {
      margin-top: 0;
    }
    
    .category-header {
      margin: 1.5rem 0;
      padding-bottom: 1.5rem;
    }
    
    .category-title {
      font-size: 2rem;
    }
    
    .category-icon {
      font-size: 2.5rem;
    }
    
    .category-description {
      font-size: 1rem;
    }
    
    .posts-list {
      margin-top: 1rem;
    }
  }
</style>
