---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Bio from '@/components/Bio.astro';
import PostCard from '@/components/PostCard.astro';
import { getCategoryBySlug, getAllCategorySlugs } from '@/utils/category';
import { sortByDate } from '@/utils/date';
import { SITE_DESCRIPTION } from '@/consts';

export async function getStaticPaths() {
  const categorySlugs = getAllCategorySlugs();
  const posts = await getCollection('blog');
  
  return categorySlugs.map((slug) => {
    // 해당 카테고리의 포스트만 필터링
    const categoryPosts = posts.filter((post) => {
      return (post.data as any).category === slug;
    });
    
    return {
      params: { slug },
      props: { 
        posts: categoryPosts,
        categorySlug: slug 
      },
    };
  });
}

interface Props {
  posts: any[];
  categorySlug: string;
}

const { posts, categorySlug } = Astro.props;
const categoryInfo = getCategoryBySlug(categorySlug);
const categoryName = categoryInfo?.name || categorySlug;

// 날짜순 정렬
const sortedPosts = sortByDate(posts);

// 페이지 타이틀과 설명
const pageTitle = `${categoryName} 카테고리`;
const pageDescription = `${categoryName} 관련 포스트들을 확인해보세요.`;
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  
  <div class="container">
    <div class="content-wrapper">
      <main class="main-content">
        <!-- 카테고리 헤더 -->
        <div class="category-header">
          <h1 class="category-title">
            {categoryInfo && (
              <span class="category-icon" set:text={categoryInfo.icon} />
            )}
            {categoryName}
          </h1>
          <p class="category-description">
            총 {sortedPosts.length}개의 포스트
          </p>
        </div>
        
        <!-- 포스트 목록 -->
        <div class="posts-list">
          {sortedPosts.length > 0 ? (
            sortedPosts.map((post) => (
              <PostCard post={post} />
            ))
          ) : (
            <p class="no-posts">아직 포스트가 없습니다.</p>
          )}
        </div>
      </main>
      
      <!-- Bio 컴포넌트 -->
      <aside class="sidebar">
        <Bio />
      </aside>
    </div>
  </div>
  
  <Footer />
</Layout>

<style>
  .content-wrapper {
    margin-top: 2em;
    display: flex;
    min-height: 85vh;
    align-items: flex-start;
    gap: 40px;
  }
  
  .main-content {
    width: calc(100% - 320px - 40px);
    flex: 1;
  }
  
  .sidebar {
    width: 320px;
    flex-shrink: 0;
    position: sticky;
    top: 2em;
  }
  
  .category-header {
    margin: 2rem 0;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .category-title {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 0 0 1rem 0;
    font-size: 2.5rem;
    font-weight: 800;
    color: white;
    letter-spacing: -0.5px;
  }
  
  .category-icon {
    font-size: 3rem;
    line-height: 1;
  }
  
  .category-description {
    margin: 0;
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .posts-list {
    margin-top: 2rem;
  }
  
  .no-posts {
    padding: 4rem 0;
    text-align: center;
    color: rgba(255, 255, 255, 0.5);
    font-size: 1.1rem;
  }
  
  @media screen and (max-width: 1024px) {
    .content-wrapper {
      display: block;
    }
    
    .main-content {
      width: 100%;
    }
    
    .sidebar {
      position: relative;
      margin: 2em 0;
      width: 100%;
      top: 0;
    }
  }
  
  @media (max-width: 768px) {
    .content-wrapper {
      margin-top: 0;
    }
    
    .category-header {
      margin: 1.5rem 0;
      padding-bottom: 1.5rem;
    }
    
    .category-title {
      font-size: 2rem;
    }
    
    .category-icon {
      font-size: 2.5rem;
    }
    
    .category-description {
      font-size: 1rem;
    }
    
    .posts-list {
      margin-top: 1rem;
    }
  }
</style>
