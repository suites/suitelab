---
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Bio from '@/components/Bio.astro';
import CategoryLabel from '@/components/CategoryLabel.astro';
import PostNavigation from '@/components/PostNavigation.astro';
import Disqus from '@/components/Disqus.astro';
import { formatDate } from '@/utils/date';
import { twemojiParse } from '@/utils/twemoji.util';
import { SITE_URL } from '@/consts';

type Props = CollectionEntry<'blog'>['data'] & {
  headings?: Array<{ depth: number; slug: string; text: string }>;
  readTime?: number;
};

const { title, description, pubDate, headings, readTime, ...otherProps } = Astro.props;

// ÏÑ†ÌÉùÏ†Å ÌïÑÎìúÎì§ (Ïö∞Î¶¨ Ïä§ÌÉÄÏùº ÎòêÎäî Îã§Î•∏ Ïä§ÌÉÄÏùº ÏßÄÏõê)
const date = 'date' in otherProps ? otherProps.date : null;
const category = 'category' in otherProps ? otherProps.category : null;
const emoji = 'emoji' in otherProps ? otherProps.emoji : null;

// ÎÇ†Ïßú ÌïÑÎìú ÌÜµÌï© (Í∏∞Ï°¥ Ïä§ÌÉÄÏùºÍ≥º ÌÖúÌîåÎ¶ø Î™®Îëê ÏßÄÏõê)
const postDateValue = date || pubDate || new Date();
const postDate = formatDate(postDateValue);
const estimatedReadTime = readTime || 5;

// Disqus ÏÑ§Ï†ï (Gatsby Î≤ÑÏ†ÑÍ≥º ÎèôÏùº)
const slug = ('slug' in otherProps ? otherProps.slug : null) || Astro.url.pathname;
const postUrl = `${SITE_URL}${slug}`;
const postId = Astro.url.pathname; // identifierÎ°ú ÏÇ¨Ïö©
---

<Layout title={title} description={description || ''}>
  <Header />
  
  <main id="main-content" class="blog-post-layout">
    <div class="container">
      <div class="content-grid">
        <!-- Î©îÏù∏ ÏΩòÌÖêÏ∏† -->
        <article class="post-content-wrapper">
          <section class="post-content-main">
          <!-- ÌûàÏñ¥Î°ú Ïù¥ÎØ∏ÏßÄ (ÏÑ†Ïù∏Ïû• Ìå®ÌÑ¥ Î∞∞Í≤Ω + Ïù¥Î™®ÏßÄ) -->
          {emoji && (
            <div class="hero-image" set:html={twemojiParse(emoji)} />
          )}
          
          <!-- Ìè¨Ïä§Ìä∏ Ìó§Îçî -->
          <header class="post-header">
            <div class="post-meta">
              {category && <CategoryLabel category={category} />}
              <time datetime={postDateValue.toISOString()} class="post-date">
                {postDate}
              </time>
              <span class="read-time" aria-label={`ÏòàÏÉÅ ÏùΩÍ∏∞ ÏãúÍ∞Ñ ${estimatedReadTime}Î∂Ñ`}>
                üìñ {estimatedReadTime}Î∂Ñ ÏùΩÍ∏∞
              </span>
            </div>
            
            <div class="post-title-section">
              <h1 class="post-title">{title}</h1>
            </div>
            
            {description && (
              <p class="post-description">{description}</p>
            )}
          </header>
        
          
          <!-- Ìè¨Ïä§Ìä∏ Î≥∏Î¨∏ -->
          <div class="prose">
            <slot />
          </div>
          
          <!-- Disqus (RelatedPosts ÏúÑÏóê ÏúÑÏπò) -->
          <aside class="post-aside">
            <Disqus url={postUrl} identifier={postId} title={title} />
          </aside>
          
          <!-- Ìè¨Ïä§Ìä∏ ÎÑ§ÎπÑÍ≤åÏù¥ÏÖò (RelatedPosts Ïó≠Ìï†) -->
          <PostNavigation />
          </section>
        </article>
        
        <!-- Bio -->
        <Bio />
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>

<style>
  .blog-post-layout {
    padding: 2rem 0;
    min-height: 70vh;
  }
  
  .content-grid {
    display: flex;
    align-items: flex-start;
    gap: 3rem;
  }
  
  .post-content-wrapper {
    flex: 1;
    min-width: 0; /* Flex overflow Î∞©ÏßÄ */
  }
  
  .sidebar {
    width: 300px;
    flex-shrink: 0;
  }
  
  .post-content-main {
    position: relative;
    background: #fff;
    overflow: hidden;
    font-size: 16px;
    color: #333;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .post-content-main::before,
  .post-content-main::after {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    z-index: 5;
  }
  
  .post-content-main::before {
    top: 0;
    left: 0;
    border-top: 20px solid rgb(33, 36, 45); /* theme.colors.background */
    border-right: 20px solid transparent;
  }
  
  .post-content-main::after {
    bottom: 0;
    right: 0;
    border-bottom: 20px solid rgb(33, 36, 45); /* theme.colors.background */
    border-left: 20px solid transparent;
  }
  
  /* ÌûàÏñ¥Î°ú Ïù¥ÎØ∏ÏßÄ (Gatsby ÏõêÎ≥∏ Ïä§ÌÉÄÏùº) */
  .hero-image {
    position: relative;
    background: #313746; /* theme.colors.blackLight */
    text-align: center;
    background-image: url('/images/svg/others/pattern.svg');
    background-repeat: repeat;
    background-size: 400px;
    min-height: 230px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    padding: 0;
  }
  
  .hero-image :global(.emoji) {
    width: 110px !important;
    height: 110px !important;
  }
  
  .post-header {
    margin-bottom: 3rem;
    padding: 1.8rem 2.5rem 0rem;
  }
  
  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }
  
  .post-date {
    color: #999;
    font-size: 0.9rem;
    font-weight: 500;
  }
  
  .read-time {
    color: #999;
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  
  .post-title-section {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }
  
  
  .post-title {
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    font-weight: 700;
    line-height: 1.5;
    margin: 0.1rem 0 0.3rem;
    color: #333;
    word-break: keep-all;
  }
  
  .post-description {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
    margin: 0;
    font-style: italic;
  }
  
  .toc-mobile {
    display: none;
    margin-bottom: 2rem;
  }
  
  .sidebar {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 2rem;
  }
  
  .sticky-element {
    position: sticky;
    top: 2rem;
  }
  
  .toc-desktop {
    display: block;
  }
  
  /* Post Aside - Gatsby Î≤ÑÏ†ÑÏùò asideÏôÄ ÎèôÏùº */
  .post-aside {
    margin-top: 0;
  }
  
  /* Prose Ïä§ÌÉÄÏùºÎßÅ - Gatsby ÏõêÎ≥∏ Ïä§ÌÉÄÏùº */
  .prose {
    max-width: none;
    color: #333;
    line-height: 1.9;
    font-size: 16px;
    padding: 0 2.5rem 2rem;
    margin: 1.5rem 0 1rem;
  }
  
  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4),
  .prose :global(h5),
  .prose :global(h6) {
    color: #333;
    font-weight: 700;
    line-height: 1.5;
    margin: 40px 0 10px;
    scroll-margin-top: 5rem;
  }
  
  .prose :global(h2) { 
    position: relative;
    margin: 55px 0 12px;
    padding: 5px 0 5px 17px;
    font-size: 1.55em;
  }
  
  .prose :global(h2)::before {
    position: absolute;
    top: 0;
    left: 0;
    content: '';
    display: inline-block;
    width: 5px;
    height: 100%;
    border-radius: 5px;
    background: linear-gradient(0deg, #ffa649 0%, #ffa649 50%, #f7645b 50%, #f7645b 100%);
  }
  
  .prose :global(h3) { 
    margin: 55px 0 12px;
    font-size: 1.45em; 
  }
  
  .prose :global(h4) { 
    font-size: 1.1em;
    position: relative;
    padding-left: 18px;
  }
  
  .prose :global(p) {
    margin-bottom: 1.75rem;
  }
  
  .prose :global(a) {
    color: #0c9ee4;
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .prose :global(a:hover) {
    text-decoration: underline;
  }
  
  .prose :global(blockquote) {
    margin: 2.3rem 0;
    font-style: italic;
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 4px;
    border-left: 4px solid #0c9ee4;
  }
  
  .prose :global(blockquote p) {
    margin: 0.3rem 0;
  }
  
  .prose :global(code) {
    background: #f1f3f4;
    color: #e74c3c;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', monospace;
    font-size: 0.9em;
    font-weight: 500;
  }
  
  .prose :global(pre) {
    background: #2d3748 !important;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    padding: 1.5rem;
    margin: 2rem 0;
    overflow-x: auto;
    line-height: 1.6;
  }
  
  .prose :global(pre code) {
    background: none !important;
    color: inherit !important;
    padding: 0;
    border-radius: 0;
    font-size: 0.95rem;
  }
  
  .prose :global(img) {
    border-radius: 8px;
    margin: 2rem 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    max-width: 100%;
    height: auto;
  }
  
  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1.75rem;
    padding-left: 2rem;
  }
  
  .prose :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }
  
  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 8px;
    overflow: hidden;
  }
  
  .prose :global(th),
  .prose :global(td) {
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.75rem 1rem;
    text-align: left;
  }
  
  .prose :global(th) {
    background: rgba(12, 158, 228, 0.1);
    font-weight: 600;
    color: white;
  }
  
  /* Î∞òÏùëÌòï ÎîîÏûêÏù∏ */
  @media (max-width: 1024px) {
    .content-grid {
      flex-direction: column;
      gap: 2rem;
    }
    
    .sidebar {
      width: 100%;
      order: -1;
    }
    
    .sticky-element {
      position: static;
    }
  }
  
  @media (max-width: 768px) {
    .blog-post-layout {
      padding: 1rem 0;
    }
    
    .post-header {
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
    }
    
    .post-title-section {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 1rem;
    }

    .post-title {
      font-size: clamp(1.75rem, 6vw, 2.5rem);
    }
    
    .post-meta {
      justify-content: center;
      text-align: center;
    }
    
    .prose {
      font-size: 1rem;
    }
    
    .prose :global(h2) {
      font-size: 1.75rem;
    }
    
    .prose :global(h3) {
      font-size: 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .post-meta {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .prose :global(pre) {
      margin-left: -1rem;
      margin-right: -1rem;
      border-radius: 0;
    }
  }
</style>